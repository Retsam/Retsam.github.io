{
    "compilerOptions": {
        "target": "ES6",
        "noEmit": true,
        "strict": true,
        "allowJs": true,
        "noUnusedLocals": true,
        "esModuleInterop": true,
        "importHelpers": true,
        "moduleResolution": "node",
        "jsx": "react",
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "lib": ["dom", "es2015", "es2016"],
        "types": [],
        "skipLibCheck": true
    },
    "include": ["src"],
    "exclude": ["node_modules"]
}
